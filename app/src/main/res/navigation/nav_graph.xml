<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home" >

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.romandevyatov.bestfinance.ui.fragments.menu.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_add_income"
            app:destination="@id/navigation_add_income" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_add_expense"
            app:destination="@id/navigation_add_expense" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_history"
            app:destination="@id/navigation_history" />
        <action
            android:id="@+id/action_navigation_home_to_transferFragment"
            app:destination="@id/navigation_add_new_transfer" />
        <action
            android:id="@+id/action_navigation_home_to_analyzeFragment"
            app:destination="@id/navigation_analyze" />
    </fragment>

    <fragment
        android:id="@+id/navigation_wallet"
        android:name="com.romandevyatov.bestfinance.ui.fragments.menu.WalletFragment"
        android:label="Wallet"
        tools:layout="@layout/fragment_wallet" >
        <action
            android:id="@+id/action_navigation_wallet_to_navigation_add_wallet"
            app:destination="@id/navigation_add_wallet" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_income"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddIncomeHistoryFragment"
        android:label="AddIncome"
        tools:layout="@layout/fragment_add_income_history" >
        <action
            android:id="@+id/action_navigation_add_income_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_add_income_to_navigation_add_new_income_group"
            app:destination="@id/navigation_add_new_income_group" />
        <action
            android:id="@+id/action_navigation_add_income_to_navigation_add_new_sub_income_group"
            app:destination="@id/navigation_add_new_income_sub_group" />
        <action
            android:id="@+id/action_navigation_add_income_to_navigation_add_wallet"
            app:destination="@id/navigation_add_wallet" />

        <argument
            android:name="incomeGroupName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="incomeSubGroupName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="walletName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>

    <fragment
        android:id="@+id/navigation_add_expense"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddExpenseHistoryFragment"
        android:label="fragment_add_expense_history"
        tools:layout="@layout/fragment_add_expense_history" >
        <action
            android:id="@+id/action_navigation_add_expense_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_add_expense_to_navigation_add_new_expense_group"
            app:destination="@id/navigation_add_new_expense_group" />
        <action
            android:id="@+id/action_navigation_add_expense_to_navigation_add_new_expense_sub_group"
            app:destination="@id/navigation_add_new_expense_sub_group" />
        <action
            android:id="@+id/action_navigation_add_expense_to_navigation_add_wallet"
            app:destination="@id/navigation_add_wallet" />
        <argument
            android:name="expenseGroupName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="expenseSubGroupName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="walletName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>
    <fragment
        android:id="@+id/navigation_history"
        android:name="com.romandevyatov.bestfinance.ui.fragments.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/navigation_add_new_income_group"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddIncomeGroupFragment"
        android:label="fragment_add_new_income_group"
        tools:layout="@layout/fragment_add_income_group" >

        <action
            android:id="@+id/action_navigation_add_new_income_group_to_navigation_add_income"
            app:destination="@id/navigation_add_income" />
    </fragment>
    <fragment
        android:id="@+id/navigation_add_new_income_sub_group"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddIncomeSubGroupFragment"
        android:label="fragment_add_new_income_sub_group"
        tools:layout="@layout/fragment_add_income_sub_group" >

        <action
            android:id="@+id/action_navigation_add_new_income_sub_group_to_navigation_add_income"
            app:destination="@id/navigation_add_income" />

        <argument
            android:name="incomeGroupName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/navigation_add_new_expense_group"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddExpenseGroupNameFragment"
        android:label="fragment_add_new_expense_group"
        tools:layout="@layout/fragment_add_expense_group" >

        <action
            android:id="@+id/action_navigation_add_new_expense_group_to_navigation_add_expense"
            app:destination="@id/navigation_add_expense" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_new_expense_sub_group"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddExpenseSubGroupFragment"
        android:label="fragment_add_new_expense_sub_group"
        tools:layout="@layout/fragment_add_expense_sub_group" >

        <action
            android:id="@+id/action_navigation_add_new_expense_sub_group_to_navigation_add_expense"
            app:destination="@id/navigation_add_expense" />

        <argument
            android:name="expenseGroupName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_wallet"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddWalletFragment"
        android:label="Add Wallet"
        tools:layout="@layout/fragment_add_wallet" >
        <action
            android:id="@+id/action_navigation_add_wallet_to_navigation_wallet"
            app:destination="@id/navigation_wallet" />
        <action
            android:id="@+id/action_navigation_add_wallet_to_navigation_add_income"
            app:destination="@id/navigation_add_income" />
        <action
            android:id="@+id/action_navigation_add_wallet_to_navigation_add_expense"
            app:destination="@id/navigation_add_expense" />

        <argument
            android:name="source"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/navigation_add_new_transfer"
        android:name="com.romandevyatov.bestfinance.ui.fragments.addiction.AddTransferFragment"
        android:label="fragment_transfer"
        tools:layout="@layout/fragment_transfer" >
        <action
            android:id="@+id/action_add_new_transfer_fragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/navigation_analyze"
        android:name="com.romandevyatov.bestfinance.ui.fragments.analyze.AnalyzeFragment"
        android:label="AnalyzeFragment"
        tools:layout="@layout/fragment_analyze" >
        <action
            android:id="@+id/action_navigation_analyze_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

</navigation>

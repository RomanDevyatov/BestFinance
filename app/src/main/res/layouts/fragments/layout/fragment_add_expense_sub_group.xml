<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addExpenseSubGroupFragment"
    tools:context=".ui.fragments.addictions.expense.AddExpenseSubGroupFragment">

    <EditText
        android:id="@+id/subGroupNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income sub group name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/subGroupDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income sub group description"
        app:layout_constraintEnd_toEndOf="@+id/subGroupNameEditText"
        app:layout_constraintStart_toStartOf="@+id/subGroupNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/subGroupNameEditText" />

    <Spinner
        android:id="@+id/groupSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense group"
        app:layout_constraintEnd_toEndOf="@+id/subGroupDescriptionEditText"
        app:layout_constraintStart_toStartOf="@+id/subGroupDescriptionEditText"
        app:layout_constraintTop_toBottomOf="@+id/subGroupDescriptionEditText" />

    <Button
        android:id="@+id/addNewExpenseSubGroupNameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textSize="20sp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addExpenseSubGroupFragment"
    tools:context=".ui.fragments.add.subgroup.AddExpenseSubGroupFragment" >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/subGroupNameTextInputLayout"
        style="@style/CustomTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sub_group_name"
        app:helperText="Required"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/subGroupNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/subGroupDescriptionTextInputLayout"
        style="@style/CustomTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:hint="@string/sub_group_description"
        app:layout_constraintEnd_toEndOf="@+id/subGroupNameTextInputLayout"
        app:layout_constraintStart_toStartOf="@+id/subGroupNameTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/subGroupNameTextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/subGroupDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/groupSpinnerLayout"
        style="@style/CustomAutoCompleteTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:hint="@string/expense_groups"
        app:helperText="Required"
        app:layout_constraintEnd_toEndOf="@+id/subGroupDescriptionTextInputLayout"
        app:layout_constraintStart_toStartOf="@+id/subGroupDescriptionTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/subGroupDescriptionTextInputLayout">

        <AutoCompleteTextView
            android:id="@+id/groupSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addSubGroupNameButton"
        style="@style/MaterialButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/add"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/groupSpinnerLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/groupSpinnerLayout"
        app:layout_constraintTop_toBottomOf="@+id/groupSpinnerLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
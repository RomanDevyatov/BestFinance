<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addIncomeHistoryFragment"
    tools:context=".ui.fragments.addictions.income.AddIncomeHistoryFragment" >

    <Spinner
        android:id="@+id/incomeGroupSpinner"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/incomeSubGroupSpinner"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/incomeGroupSpinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/incomeGroupSpinner"
        app:layout_constraintTop_toBottomOf="@+id/incomeGroupSpinner" />

    <Spinner
        android:id="@+id/walletSpinner"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/incomeSubGroupSpinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/incomeSubGroupSpinner"
        app:layout_constraintTop_toBottomOf="@+id/incomeSubGroupSpinner" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/commentTextInputLayout"
        android:layout_width="270dp"
        android:layout_height="46dp"
        app:helperText="Required"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/dateTextInputLayout"
        app:layout_constraintStart_toStartOf="@+id/dateTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/dateTextInputLayout" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comment"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountTextInputLayout"
        android:layout_width="270dp"
        android:layout_height="46dp"
        app:helperText="Required"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/walletSpinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/walletSpinner"
        app:layout_constraintTop_toBottomOf="@+id/walletSpinner" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateTextInputLayout"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        app:helperText="Required"
        app:layout_constraintEnd_toEndOf="@+id/amountTextInputLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/amountTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/amountTextInputLayout" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/addIncomeHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/commentTextInputLayout"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/commentTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/commentTextInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>

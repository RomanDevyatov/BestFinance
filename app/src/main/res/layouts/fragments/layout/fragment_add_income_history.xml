<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddIncomeFragment"
    tools:context=".ui.fragments.AddIncomeHistoryFragment">

    <Spinner
        android:id="@+id/incomeGroupSpinner"
        android:layout_width="290dp"
        android:layout_height="23dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/walletSpinner"
        android:layout_width="312dp"
        android:layout_height="25dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="@+id/incomeGroupSpinner"
        app:layout_constraintStart_toStartOf="@+id/incomeGroupSpinner"
        app:layout_constraintTop_toBottomOf="@+id/incomeGroupSpinner" />

    <EditText
        android:id="@+id/walletBalanceEditText"
        android:layout_width="264dp"
        android:layout_height="46dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="@+id/walletSpinner"
        app:layout_constraintStart_toStartOf="@+id/walletSpinner"
        app:layout_constraintTop_toBottomOf="@+id/walletSpinner" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="@+id/walletBalanceEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/walletBalanceEditText"
        app:layout_constraintTop_toBottomOf="@+id/walletBalanceEditText" />

    <Button
        android:id="@+id/addWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Add income"
        app:layout_constraintEnd_toEndOf="@+id/dateEditText"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/dateEditText"
        app:layout_constraintTop_toBottomOf="@+id/dateEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddIncomeFragment"
    tools:context=".ui.fragments.AddIncomeHistoryFragment">

    <Spinner
        android:id="@+id/incomeGroupSpinner"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/walletSpinner"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/incomeGroupSpinner"
        app:layout_constraintStart_toStartOf="@+id/incomeGroupSpinner"
        app:layout_constraintTop_toBottomOf="@+id/incomeGroupSpinner" />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:hint="Amount"
        app:layout_constraintEnd_toEndOf="@+id/walletSpinner"
        app:layout_constraintStart_toStartOf="@+id/walletSpinner"
        app:layout_constraintTop_toBottomOf="@+id/walletSpinner" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:hint="Date"
        app:layout_constraintEnd_toEndOf="@+id/amountEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/amountEditText"
        app:layout_constraintTop_toBottomOf="@+id/amountEditText" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:hint="Comment"
        app:layout_constraintEnd_toEndOf="@+id/dateEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dateEditText"
        app:layout_constraintTop_toBottomOf="@+id/dateEditText" />

    <Button
        android:id="@+id/addIncomeHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add income"
        app:layout_constraintEnd_toEndOf="@+id/commentEditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/commentEditText"
        app:layout_constraintTop_toBottomOf="@+id/commentEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addIncomeSubGroupFragment"
    tools:context=".ui.fragments.addictions.income.AddIncomeSubGroupFragment" >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newIncomeSubGroupNameContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperText="Required"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newIncomeSubGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Income sub group name"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/newIncomeSubGroupDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income sub group description"
        app:layout_constraintEnd_toEndOf="@+id/newIncomeSubGroupNameContainer"
        app:layout_constraintStart_toStartOf="@+id/newIncomeSubGroupNameContainer"
        app:layout_constraintTop_toBottomOf="@+id/newIncomeSubGroupNameContainer" />

    <Spinner
        android:id="@+id/toIncomeGroupSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income group"
        app:layout_constraintEnd_toEndOf="@+id/newIncomeSubGroupDescription"
        app:layout_constraintStart_toStartOf="@+id/newIncomeSubGroupDescription"
        app:layout_constraintTop_toBottomOf="@+id/newIncomeSubGroupDescription" />

    <Button
        android:id="@+id/addNewIncomeSubGroupNameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textSize="20sp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

</androidx.constraintlayout.widget.ConstraintLayout>
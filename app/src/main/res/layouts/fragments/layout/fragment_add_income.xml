<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/expenseGroupSpinner"
        android:layout_width="290dp"
        android:layout_height="23dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/expenseSubGroupSpinner"
        android:layout_width="312dp"
        android:layout_height="25dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="@+id/expenseGroupSpinner"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/expenseGroupSpinner"
        app:layout_constraintTop_toBottomOf="@+id/expenseGroupSpinner" />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="279dp"
        android:layout_height="35dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@+id/expenseSubGroupSpinner"
        app:layout_constraintStart_toStartOf="@+id/expenseSubGroupSpinner"
        app:layout_constraintTop_toBottomOf="@+id/expenseSubGroupSpinner" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="264dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/amountEditText"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/amountEditText"
        app:layout_constraintTop_toBottomOf="@+id/amountEditText" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/commentEditText"
        app:layout_constraintStart_toStartOf="@+id/commentEditText"
        app:layout_constraintTop_toBottomOf="@+id/commentEditText" />

    <Button
        android:id="@+id/addExpenseRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Add income"
        app:layout_constraintEnd_toEndOf="@+id/dateEditText"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/dateEditText"
        app:layout_constraintTop_toBottomOf="@+id/dateEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/IncomeFragment"
    tools:context=".ui.fragments.deprecated.IncomeFragment" >

        <TextView
            android:id="@+id/sumOfIncomeHistoryAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAHA, balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <com.romandevyatov.bestfinance.ui.adapters.income.CustomRecyclerView-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/parent_recycler_view"
            android:layout_width="396dp"
            android:layout_height="650dp"
            android:clipToPadding="false"
            android:paddingTop="10dp"
            android:paddingBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sumOfIncomeHistoryAmountTextView" />

        <Button
            android:id="@+id/goToAddNewIncomeGroupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent_recycler_view" />

</androidx.constraintlayout.widget.ConstraintLayout>

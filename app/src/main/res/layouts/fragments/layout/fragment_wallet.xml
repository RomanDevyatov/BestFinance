<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WalletFragment"
    tools:context=".ui.fragments.menu.WalletFragment" >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/walletRecyclerView"
        android:layout_width="409dp"
        android:layout_height="326dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/walletNameEditText"
        android:layout_width="281dp"
        android:layout_height="46dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="48dp"
        android:hint="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletRecyclerView" />

    <EditText
        android:id="@+id/walletBalanceEditText"
        android:layout_width="278dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:hint="balance"
        app:layout_constraintEnd_toEndOf="@+id/walletNameEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/walletNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/walletNameEditText" />

<!--    <EditText-->
<!--        android:id="@+id/walletCommentEditText"-->
<!--        android:layout_width="278dp"-->
<!--        android:layout_height="49dp"-->
<!--        android:layout_marginTop="28dp"-->
<!--        android:hint="comment"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/walletNameEditText"-->
<!--        app:layout_constraintHorizontal_bias="1.0"-->
<!--        app:layout_constraintStart_toStartOf="@+id/walletNameEditText"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/walletNameEditText" />-->

    <Button
        android:id="@+id/addWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Add wallet"
        app:layout_constraintEnd_toEndOf="@+id/walletBalanceEditText"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/walletBalanceEditText"
        app:layout_constraintTop_toBottomOf="@+id/walletBalanceEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BestFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/grey_200</item>
        <item name="colorPrimaryDark">@color/grey_200</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/yellow_200</item>
        <item name="colorOnSecondary">@color/teal_700</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/grey_700</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey_100</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/grey_200</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TopToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">14dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/grey_200</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomAutoCompleteTextViewStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/grey_100</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/grey_700</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Custom style for the AlertDialog -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>

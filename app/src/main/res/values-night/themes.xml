<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BestFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item> <!-- bottom chosen -->
        <item name="colorPrimaryVariant">@color/green_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryDark">@color/black</item>

        <item name="colorSecondary">@color/white</item> <!-- switcher color -->
        <item name="colorSecondaryVariant">@color/green_200</item>
        <item name="colorOnSecondary">@color/grey_700</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey_700</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/grey_700</item> <!-- цвет обводки внизу-->
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TopToolbarStyle" parent="Widget.AppCompat.Toolbar">
<!--        <item name="android:background">@color/black</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
<!--        <item name="android:elevation">14dp</item>-->
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/grey_200</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:textSize">16sp</item>
<!--        <item name="android:background">@color/black</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <!-- Add more card attributes as needed -->
    </style>

    <style name="CustomAutoCompleteTextViewStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/grey_100</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/grey_700</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Custom style for the AlertDialog -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>

        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey_100</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey_700</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/grey_200</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Style for the top toolbar -->
    <style name="TopToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">14dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="background">@color/white</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextColor">@color/grey_200</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>


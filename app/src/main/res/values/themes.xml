    <style name="Theme.BestFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/green_200</item>
        <item name="colorPrimaryDark">@color/grey_200</item>

